# Application Settings
APP_NAME=Tableau App
APP_VERSION=1.0.0
DEBUG=True

# Server
HOST=127.0.0.1
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://tableau_user:your_password_here@localhost/tableau_app
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-min-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=8

# Encryption for data source credentials (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# Query Cache
QUERY_CACHE_TTL=900
QUERY_CACHE_MAX_SIZE_MB=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Storage
UPLOAD_DIR=./data/uploads
CACHE_DIR=./data/cache
EXPORT_DIR=./data/exports

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
